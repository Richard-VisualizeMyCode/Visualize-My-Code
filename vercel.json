{
    "version": 2,
    "builds": [
        {
            "src": "frontend/package.json",
            "use": "@vercel/next",
            "config": {
                "excludeFiles": "**/node_modules/**,**/build/**,**/dist/**,**/__pycache__/**,**/public/assets/large-images/*,**/*.pyc,**/*.log,**/*.md"
            }
        },
        {
            "src": "backend/generate_backend.py",
            "use": "@vercel/python",
            "config": {
                "includeFiles": "**/*.py",
                "excludeFiles": "**/__pycache__/**,**/*.pyc,**/*.log,**/*.md,**/tests/**,**/docs/**"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/generate_backend.app"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/$1"
        }
    ]
}