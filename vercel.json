{
    "version": 2,
    "builds": [
        {
            "src": "frontend/package.json",
            "use": "@vercel/next"
        },
        {
            "src": "backend/generate_backend.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/generate_backend.app"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/$1"
        }
    ],
    "functions": {
        "backend/generate_backend.py": {
            "excludeFiles": [
                "frontend/**",
                "node_modules/**",
                "tests/**",
                "docs/**"
            ]
        }
    }
}